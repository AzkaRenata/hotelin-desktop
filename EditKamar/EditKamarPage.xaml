<basic:MyPage xmlns:basic="clr-namespace:Velacro.UIElements.Basic;assembly=Velacro"
      x:Class="Hotelin_Desktop.EditKamar.EditKamarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hotelin_Desktop.EditKamar"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      Background="{DynamicResource MaterialDesignPaper}"
      TextElement.FontWeight="Medium"
      TextElement.FontSize="14"
      FontFamily="{materialDesign:MaterialDesignFont}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="620"
      Title="EditKamarPage">

    <Grid Background="White">
        <Label 
            Content="Edit Kamar"
            VerticalContentAlignment="Center"
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"
            Margin="20,20,0,0" 
            Height="47"
            FontSize="26" 
            Foreground="#707070"
            FontWeight="Bold"/>

        <TextBox 
            x:Name="kode_kamar_txt"
            materialDesign:HintAssist.Hint="Kode Kamar"
            HorizontalAlignment="Left" 
            Height="46" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            VerticalContentAlignment="Center"
            Width="257" 
            RenderTransformOrigin="-0.132,0.621" 
            Padding="3,7,3,3" Margin="28,81,0,0" BorderBrush="#FFABADB3">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="6"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <TextBox 
            x:Name="tipe_kamar_txt"
            materialDesign:HintAssist.Hint="Tipe Kamar"
            HorizontalAlignment="Left" 
            Height="46" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            VerticalContentAlignment="Center"
            Width="257" 
            RenderTransformOrigin="-0.132,0.621" 
            Padding="3,7,3,3" Margin="28,135,0,0" BorderBrush="#FFABADB3">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="6"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <TextBox 
            x:Name="tipe_kasur_txt"
            materialDesign:HintAssist.Hint="Tipe Kasur"
            HorizontalAlignment="Left" 
            Height="46" 
            TextWrapping="Wrap"
            VerticalAlignment="Top" 
            Width="257" 
            VerticalContentAlignment="Center"
            RenderTransformOrigin="-0.132,0.621" 
            Padding="3,7,3,3" Margin="28,187,0,0" BorderBrush="#FFABADB3">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="6"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <TextBox 
            x:Name="jumlah_kasur_txt"
            materialDesign:HintAssist.Hint="Jumlah Kasur"
            HorizontalAlignment="Left" 
            Height="46" 
            TextWrapping="Wrap"
            VerticalAlignment="Top" 
            Width="257" 
            VerticalContentAlignment="Center"
            RenderTransformOrigin="-0.132,0.621" 
            Padding="3,7,3,3" Margin="28,238,0,0" 
            BorderBrush="#FFABADB3">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="6"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <TextBox 
            x:Name="kapasitas_tamu_txt"
             materialDesign:HintAssist.Hint="Kapasitas Tamu"
            HorizontalAlignment="Left" 
            Height="46" 
            TextWrapping="Wrap"
            VerticalAlignment="Top" 
            Width="257" 
            VerticalContentAlignment="Center"
            RenderTransformOrigin="-0.132,0.621" 
            Padding="3,7,3,3" Margin="28,293,0,0" BorderBrush="#FFABADB3">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="6"/>
                </Style>
            </TextBox.Resources>
        </TextBox>
        <TextBox 
            x:Name="harga_kamar_txt"
            materialDesign:HintAssist.Hint="Harga Kamar"
            HorizontalAlignment="Left" 
            Height="46" 
            TextWrapping="Wrap"
            VerticalAlignment="Top" 
            Width="257" 
            VerticalContentAlignment="Center"
            RenderTransformOrigin="-0.132,0.621" 
            Padding="3,7,3,3" Margin="320,81,0,0" BorderBrush="#FFABADB3">
            <TextBox.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="6"/>
                </Style>
            </TextBox.Resources>
        </TextBox>

        <Rectangle
            AllowDrop="true"
            DragOver="panel_DragOver"
            Drop="panel_Drop"
            Fill="White"
            RadiusX="6"
            RadiusY="6"
            StrokeDashArray="8"
            StrokeThickness="1"
            StrokeDashCap="Round"
            Stroke="#707070" 
            Margin="320,198,127,136" />
        <StackPanel
            Margin="346,233,153,170" 
            HorizontalAlignment="Center"
            VerticalAlignment="Center" Width="121">
            <Image 
                Source="down-arrow.png"
                Stretch="Uniform"
                Height="28" Width="67"/>
            <TextBlock
                Text="Tarik dan Lepas Gambar Disini" 
                FontFamily="Montserrat" 
                VerticalAlignment="Center" 
                HorizontalAlignment="Center" 
                FontSize="7" 
                Margin="0,10,0,0"/>
        </StackPanel>
        <Button 
            x:Name="choose_image_btn"
            Content="Pilih Gambar" 
            HorizontalAlignment="Left" 
            Margin="320,326,0,0" 
            VerticalAlignment="Top" 
            Width="173"
            Foreground="White" 
            BorderBrush="{x:Null}" 
            Background="#FF5399AF">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="6"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button 
            x:Name="edit_kamar_btn" 
            Content="SIMPAN" 
            HorizontalAlignment="Left"
            VerticalAlignment="Top" 
            Width="137" 
            Height="33" 
            Foreground="White" 
            BorderBrush="{x:Null}" 
            Background="#FF5399AF"
            Margin="28,377,0,0">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="6"/>
                </Style>
            </Button.Resources>
        </Button>

        <Label 
            Content="max file size 2MB"
            VerticalContentAlignment="Center"
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"
            Margin="316,346,0,0" 
            Height="47"
            FontSize="14" 
            Foreground="#707070"
            FontWeight="SemiBold"/>

        <TextBlock
            x:Name="selected_image_tb"
            HorizontalAlignment="Left"       
            Margin="320,379,0,0" 
            TextWrapping="Wrap" 
            Text="No Image Selected" 
            VerticalAlignment="Top"/>

    </Grid>
</basic:MyPage>
