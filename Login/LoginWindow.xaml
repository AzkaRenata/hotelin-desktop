            VerticalAlignment="Top"
            Width="378" 
            Source="hotel.jpg" 
            Stretch="UniformToFill"/>
        <Label 
            Content="Belum punya akun?" 
            HorizontalAlignment="Left" 
            Margin="501.249,351,0,0" 
            VerticalAlignment="Top"/>
