                FontSize="14" 
                FontFamily="Montserrat" 
                VerticalContentAlignment="Center"/>
            <Path 
                Data="M483.75,114.375 L706.875,114.375" 
                Fill="#FFF4F4F5" 
                HorizontalAlignment="Left" 
                Height="1" 
                Margin="0,35,0,0" 
                Stretch="Fill" 
                Stroke="Black"
                VerticalAlignment="Top" 
                Width="285"/>
            <TextBox x:Name="password_txt" 
                HorizontalAlignment="Left" 
                Height="30" Margin="0,60,0,0" 
                Text="Password" 
                TextWrapping="Wrap" 
                VerticalAlignment="Top" 
                Width="285" Background="{x:Null}" 
                BorderBrush="{x:Null}" 
                FontFamily="Montserrat" 
                FontSize="14" 
                VerticalContentAlignment="Center"/>
            <Path 
                Data="M483.75,114.375 L706.875,114.375" 
                Fill="#FFF4F4F5" 
                HorizontalAlignment="Left" 
                Height="1" 
                Margin="0,95,0,0" 
                Stretch="Fill" 
                Stroke="Black" 
                VerticalAlignment="Top" 
                Width="285"/>
            <Button x:Name="login_btn" 
                Content="LOGIN" 
                HorizontalAlignment="Left" 
                Height="38" 
                Margin="0,150,0,0" 
                VerticalAlignment="Top" 
                Width="285" 
                Background="#FF5399AF" 
                FontSize="14" 
                Foreground="White" 
