<basic:MyPage  xmlns:basic="clr-namespace:Velacro.UIElements.Basic;assembly=Velacro" x:Name="detailPage"         
    x:Class="Hotelin_Desktop.Detail.DetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hotelin_Desktop.Detail"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="620"
      Title="DetailPage">

    <Grid Background="White">
        <Label 
            Content="List Kamar"
            VerticalContentAlignment="Center"
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"
            Margin="20,20,0,0" 
            Height="47" 
            Width="242" 
            FontSize="26" 
            Foreground="#707070"
            FontWeight="Bold"/>
        <DataGrid x:Name="kamar_datagrid" 
            HorizontalAlignment="Left" 
            Height="207" 
            Margin="20,102,0,0" 
            VerticalAlignment="Top" 
            Width="578">
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="LightGray"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="7"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding id}" Width="0" Visibility="Hidden"/>
                <DataGridTextColumn Header="Tipe Kamar" Binding="{Binding room_type}" Width="130"/>
                <DataGridTextColumn Header="Harga" Binding="{Binding room_price}" Width="130"/>
                <DataGridTextColumn Header="Kapasitas Tamu" Binding="{Binding guest_capacity}" Width="150"/>
                <DataGridTemplateColumn Header="Action">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="view_btn" Content="View" Click="view_btn_Click"/>
                                <Button x:Name="edit_btn" Content="Edit" Click="edit_btn_Click"/>
                                <Button x:Name="delete_btn" Content="Delete" Click="delete_btn_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

        </DataGrid>
        <Button 
            x:Name="add_kamar_btn"
            Content="Add Kamar" 
            HorizontalAlignment="Left" 
            Height="20" Margin="510,62,0,0" 
            VerticalAlignment="Top" 
            Width="68"
            Click="addKamarButton_Click"/>
    </Grid>

</basic:MyPage>
